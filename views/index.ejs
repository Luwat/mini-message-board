<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <h1>Welcome to mini message board app</h1>
    <% messages.forEach(message=> {%>
        <div>
            <h2>
                <%= message.user %>
            </h2>
            <p>
                <%= message.text %>
            </p>
            <p>Message was added on <%= message.added%>
            </p>
            <a href="/<%= message.user %>">Open</a>
        </div>
        <% }) %>
            <a href="/new">Add a new message</a>
</body>

</html>